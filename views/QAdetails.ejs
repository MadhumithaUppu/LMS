<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Form</title>
        <script src="https://unpkg.com/feather-icons"></script>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        
        <h1>Form</h1>

        <div class="main">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Answer</th>
                  <th scope="col">Upvotes</th>
                  <th scope="col">Answered by</th>
                </tr>
              </thead>
              <tbody>
                  <% data.forEach(function(data){ %>
                      <tr>
                        <td><%= data.answer%></td>
                        <td><%= data.upvotes%></td>  
                        <td><%= data.answered_by%></td>
                      </tr>
                      <% }) %>
              </tbody>
            </table>
          </div>

          <hr>

        <div class="detail">
            <form action="/QAanswerForm" method="post">
                <label>Id</label><br>
                <input type="number" name="qa_id" value="<%= id %>" required><br>
                <label>Answer</label><br>
                <input type="text" placeholder="Write your Answer" name="Answer" required><br>
                <label>Name</label><br>
                <input type="text" placeholder="Enter your Name" name="answered_by" required><br>
                <label>Upvote</label><br>
                <input type="number" placeholder="Upvote" name="upvotes" required><br>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>

          <script>
            feather.replace()
          </script>
        <script src="" async defer></script>
    </body>
</html>